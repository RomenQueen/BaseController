<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <TextView
        android:id="@+id/next"
        android:layout_width="@dimen/padding_80px"
        android:layout_height="@dimen/padding_80px"
        android:layout_gravity="right"
        android:gravity="center"
        android:textColor="#000"
        tools:text="welcome_progress_text" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_200px"
        android:minHeight="@dimen/padding_300px"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_80px"
        android:textColor="#000"
        tools:text="welcome_progress_text" />
</LinearLayout>